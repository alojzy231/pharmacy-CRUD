{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types", "./src/typings"],
    "baseUrl": ".",
    "paths": {
      "@schemas": ["prisma/generated/schemas/index.ts"],
      "@actions/*": ["src/actions/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/", "src/**/*.spec.ts", "src/tests/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
