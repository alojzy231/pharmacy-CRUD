{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/src/index.js",
    "db:migrate:dev": "prisma migrate dev",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register --transpile-only --no-notify ./src/index.ts & pnpm run watch:deps",
    "watch:deps": "nodemon -e ts --watch '../../packages/dto/src/' --exec 'cd ../../packages/dto && pnpm run build'",
    "generate": "prisma generate",
    "prebuild": "rimraf dist",
    "build": "tsc && tsc-alias",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix"
  },
  "devDependencies": {
    "@pharmacy-crud/dto": "workspace:*",
    "@tsconfig/node16": "1.0.4",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/node": "17.0.12",
    "nodemon": "2.0.22",
    "rimraf": "5.0.0",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.8.6",
    "tsconfig-paths": "4.2.0",
    "typescript": "4.5.3"
  },
  "dependencies": {
    "@prisma/client": "4.14.1",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "prisma": "4.14.1",
    "prisma-zod-generator": "0.8.11",
    "zod": "3.21.4"
  }
}
